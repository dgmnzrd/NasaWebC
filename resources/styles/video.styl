// video.styl

#video-container
    iframe,
    video
        width 100%
        height 100%

video
    max-width 100%
    border-radius 0.5rem
    box-shadow 0 0 10px rgba(0, 0, 0, 0.1)

.suggestion-item
    display flex
    gap 0.75rem
    padding 0.75rem
    border 1px solid #e5e7eb
    border-radius 0.5rem
    transition background-color 0.2s

    &:hover
        background-color #f9fafb

.suggestion-thumb
    flex-shrink 0
    width 4rem
    height 2.5rem

.suggestion-body
    flex 1
    display flex
    flex-direction column
    justify-content center

.suggestion-title
    font-weight 600
    color #111827
    margin-bottom 0.25rem

.suggestion-meta
    font-size 0.75rem
    color #6b7280